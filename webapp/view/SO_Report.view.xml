<mvc:View
    controllerName="com.crescent.app.soregisteredreport.controller.SO_Report"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:svm="sap.ui.comp.smartvariants"
>
    <!-- <Page id="page" title="{i18n>title}">
    </Page> -->
    <f:DynamicPage
        id="pageId"
        headerExpanded="{/headerExpanded}"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <svm:SmartVariantManagement
                        id="svm"
                        showExecuteOnSelection="true"
                    />
                </f:heading>
                <f:expandedContent>
                    <Text
                        id="expandedLabel"
                        text="No filters active"
                    />
                </f:expandedContent>
                <f:snappedContent>
                    <Text
                        id="snappedLabel"
                        text="No filters active"
                    />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterbar"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        search=".onSearch"
                        filterChange=".onFilterChange"
                        afterVariantLoad=".onAfterVariantLoad"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="pa_data_from"
                                label="From Date"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        required="true"
                                        id="fromDate"
                                        change="onDateChange"
                                        displayFormat="dd/MM/yyyy"
                                        valueFormat="yyyy-MM-dd"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="pa_data_to"
                                label="To Date"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        required="true"
                                        id="toDate"
                                        change="onDateChange"
                                        displayFormat="dd/MM/yyyy"
                                        valueFormat="yyyy-MM-dd"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <OverflowToolbar>
                    <content>
                        <Title
                            text=""
                            level="H2"
                        />
                        <ToolbarSpacer />
                        <Button
                            icon="sap-icon://excel-attachment"
                            press="onExport"
                            visible="true"
                        />
                    </content>
                </OverflowToolbar>
                <!-- Fixed Header Toolbar (Not inside ScrollContainer) -->

                <ScrollContainer
                    width="100%"
                    height="auto"
                    horizontal="true"
                    vertical="false"
                >
                    <Table
                        class="tableWrapper"
                        id="table"
                        items="{
						path: 'TableDataModel>/'
					}"
                        fixedLayout="true"
                        sticky="ColumnHeaders"
                        growing="true"
                        growingScrollToLoad="false"
                        growingThreshold="20"
                        mode="None"
                    >
                        <columns>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Sales Document Type" />
                            </Column>
                            <Column
                                width="10rem"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="SO/SCNo" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Line Item No" />
                            </Column>
                            <Column width="10rem">
                                <Text text="SO/SC Date" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Customer Code" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text
                                    text="Currency"
                                />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text
                                    text="Bank"
                                />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Plant" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Sales Person" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Material Code" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Material Name" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Material Group" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Material Group Name" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="SC/Direct SO Qty" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Unit Price" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Total Price" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text
                                    text="Exchange Rate"
                                />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Total Price-INR" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Unit Wt (Kg)" />
                            </Column>
                            <Column
                                width="10rem"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                hAlign="Begin"
                                visible="true"
                            >
                                <Text text="Total Wt (Kg)" />
                            </Column>
                        </columns>

                        <items>
                            <ColumnListItem
                                vAlign="Middle"
                            >
                                <cells>
                                    <Text
                                        text="{TableDataModel>doc_type}"
                                    />
                                    <Text text="{TableDataModel>SalesDocument}" />
                                    <Text
                                        text="{TableDataModel>SalesDocumentItem}"
                                    />
                                    <Text
                                        text="{TableDataModel>SalesDocumentDate}"
                                    />
                                    <Text text="{TableDataModel>SoldToParty}" />
                                    <Text
                                        text="{TableDataModel>TransactionCurrency}"
                                    />
                                    <Text
                                        text="{TableDataModel>BankIdentification}"
                                    />
                                    <Text
                                        text="{TableDataModel>Plant}"
                                    />
                                    <Text text="{TableDataModel>salesperson}" />
                                    <Text
                                        text="{TableDataModel>Material}"
                                    />
                                    <Text text="{TableDataModel>SalesDocumentItemText}" />
                                    <Text
                                        text="{TableDataModel>MaterialGroup}"
                                    />
                                    <Text text="{TableDataModel>ProductGroupName}" />
                                    <Text text="{TableDataModel>OrderQuantity}" />
                                    <Text text="{TableDataModel>unit_price}" />
                                    <Text
                                        text="{TableDataModel>total_price}"
                                    />
                                    <Text
                                        text="{TableDataModel>PriceDetnExchangeRate}"
                                    />
                                    <Text
                                        text="{TableDataModel>total_price_inr}"
                                    />
                                    <Text text="{TableDataModel>ItemGrossWeight}" />
                                    <Text text="{TableDataModel>ItemNetWeight}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </ScrollContainer>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>